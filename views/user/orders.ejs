<%- include("../partial/user/header.ejs") %>

<style>
    .orders-container {
        margin-top: 6rem;
        padding: 2rem;
    }

    .order-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #f8f9fa;
        padding: 1rem;
        margin-bottom: 1rem;
        border-radius: 8px;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease;
    }

    .order-item:hover {
        transform: translateY(-3px);
    }

    .order-product-info {
        display: flex;
        align-items: center;
    }

    .order-product-info img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 5px;
        margin-right: 1rem;
    }

    .order-details {
        flex-grow: 1;
        text-align: center;
        font-size: 1.2rem;
    }

    .order-status {
        text-align: right;
    }

    .order-status .badge {
        font-size: 1rem;
        padding: 0.5rem 1rem;
        border-radius: 5px;
    }

    .badge-pending {
        background-color: #ffc107;
        color: #fff;
    }

    .badge-completed {
        background-color: #28a745;
        color: #fff;
    }

    .badge-cancelled {
        background-color: #dc3545;
        color: #fff;
    }

    a.order-link {
        color: inherit;
        text-decoration: none;
    }

    a.order-link:hover {
        text-decoration: underline;
    }

    .badge {
    padding: 5px 10px;
    border-radius: 5px;
    font-size: 14px;
    color: white;
}

.badge-warning { background-color: #ffc107; }
.badge-info { background-color: #17a2b8; }
.badge-primary { background-color: #007bff; }
.badge-success { background-color: #28a745; }
.badge-danger { background-color: #dc3545; }
.badge-secondary { background-color: #6c757d; }
.badge-dark { background-color: #343a40; }

</style>

<div class="container orders-container">
    <h2>Your Orders</h2>
    <hr />

    <% if (orders.length > 0) { %>
        <% orders.forEach(order => { %>
        <a href="/orders/<%= order.orderId %>" class="order-link">
            <div class="order-item">
                <div class="order-product-info">
                    <!-- Display first product image -->
                    <img src="uploads/re-images/<%= order.orderedItems[0].product.productImage[0] %>" alt="Product Image">
                    <div>
                        <p><%= order.orderedItems[0].product.name %></p>
                        <small><%= order.orderedItems.length %> items</small>
                    </div>
                </div>
                <div class="order-details">
                    <p> â‚¹<%= order.totalPrice %></p>
                </div>
                <div class="order-status">
                    <!-- Show status badge based on the order status -->
                    <% if (order.status === 'Pending') { %>
                        <span class="badge badge-warning">Pending</span>
                    <% } else if (order.status === 'Processing') { %>
                        <span class="badge badge-info">Processing</span>
                    <% } else if (order.status === 'Shipped') { %>
                        <span class="badge badge-primary">Shipped</span>
                    <% } else if (order.status === 'Delivered') { %>
                        <span class="badge badge-success">Delivered</span>
                    <% } else if (order.status === 'Cancelled') { %>
                        <span class="badge badge-danger">Cancelled</span>
                    <% } else if (order.status === 'Return Request') { %>
                        <span class="badge badge-secondary">Return Request</span>
                    <% } else if (order.status === 'Returned') { %>
                        <span class="badge badge-dark">Returned</span>
                    <% } %>
                </div>
                
            </div>
        </a>
        <% }); %>
    <% } else { %>
        <p>No orders yet. Start shopping now!</p>
    <% } %>
</div>

<%- include("../partial/user/footer.ejs") %>
