<%- include("../partial/admin/header.ejs")%>

<div class="content-header">
    <div>
        <h2 class="content-title card-title">Order Mangement</h2>
    </div>
</div>

<header class="card-header text-center mb-20">
    <form action="" method="get" class="d-inline">
        <div class="input-group input-group-sm border border-1 border-grey rounded-pill" style="width: 500px; margin-left: 230px;">
            <input type="text" class="form-control border-0 rounded-pill" placeholder="Search orderId " name="search">
            <button class="btn border-0" type="submit">Search</button>
        </div>
    </form>
</header>

<div class="container mt-5">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Products (Item No)</th>
                <th>Actual Price</th>
                <th>Discount</th>
                <th>Total Price</th>
                <th>Status</th>
                <th>Date</th>
                <th>Payment Method</th>
                <th>Payment Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% orders.forEach(order => { %>
                <tr>
                    <td><%= order.orderId %></td>
                    <td><%= order.userId.name %></td>
                    <td><%= order.orderedItems.length %></td>
                    <td>₹<%= order.totalPrice.toFixed(2) %></td>
                    <td>₹<%= order.discount.toFixed(2) %></td>
                    <td>₹<%= order.finalAmount.toFixed(2) %></td>
                    <td><%= order.status %></td>
                    <td><%= new Date(order.createdOn).toLocaleDateString() %></td>
                    <td>Cash on Delivery</td>
                    <td>Pending</td>
                    <td>
                        <a href="/admin/orders/<%= order.orderId %>" class="btn btn-primary">View</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<div class="container mt-3">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mb-20" style="margin-right: 200px;">
            <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>" aria-current="<%= (i === currentPage) ? 'page' : '' %>"><%= i %></a>
            </li>
            <% } %>
        </ul>
    </nav>
</div>

<%- include("../partial/admin/footer.ejs")%>
